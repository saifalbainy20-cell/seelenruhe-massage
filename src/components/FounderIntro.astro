---
import { getTranslation } from '../data/translations';
import type { Language } from '../lib/i18n';

export interface Props {
  lang: Language;
  isRTL: boolean;
}

const { lang, isRTL } = Astro.props;
const t = getTranslation(lang);
---

<section id="founder-intro" class="py-16 md:py-24 bg-gray-50 dark:bg-gray-900">
  <div class="container mx-auto px-6 lg:px-8 flex flex-col md:flex-row items-center justify-center gap-12">
    <div class="md:w-1/3 flex justify-center">
      <img 
        src="/images/najlaa-avatar.png" 
        alt="Najlaa Loulo - Founder of Seelenruhe Massage Studio" 
        class="w-64 h-64 rounded-full object-cover shadow-lg border-4 border-primary-500 transform hover:scale-105 transition-transform duration-300"
      />
    </div>
    <div class={`md:w-2/3 text-center ${isRTL ? 'md:text-right' : 'md:text-left'}`}>
      <h2 class="text-4xl font-serif text-gray-900 dark:text-white mb-6 leading-tight">
        {t.founderIntro.greeting}
      </h2>
      <p class="text-lg text-gray-700 dark:text-gray-300 mb-4 leading-relaxed">
        {t.founderIntro.paragraph1}
      </p>
      <p class="text-lg text-gray-700 dark:text-gray-300 mb-4 leading-relaxed">
        {t.founderIntro.paragraph2}
      </p>
      <p class="text-lg text-gray-700 dark:text-gray-300 mb-4 leading-relaxed">
        {t.founderIntro.paragraph3}
      </p>
      <p class="text-lg text-gray-700 dark:text-gray-300 mb-4 leading-relaxed">
        {t.founderIntro.paragraph4}
      </p>
      <p class="text-lg text-gray-700 dark:text-gray-300 mb-4 leading-relaxed">
        {t.founderIntro.paragraph5}
      </p>
      <p class="text-lg text-gray-700 dark:text-gray-300 mb-4 leading-relaxed">
        {t.founderIntro.paragraph6}
      </p>
      <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
        {t.founderIntro.paragraph7}
      </p>
    </div>
  </div>
</section>

