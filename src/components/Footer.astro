---
import type { Language } from '../lib/i18n';
import { getTranslation } from '../data/translations';

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslation(lang);
const isRTL = lang === 'ar';
---

<footer class="bg-gray-900 text-white py-12">
  <div class="container mx-auto px-6">
    <div class={`grid grid-cols-1 md:grid-cols-4 gap-8 mb-8 ${isRTL ? 'text-right' : 'text-left'}`}>
      <!-- Logo and Description -->
      <div class="md:col-span-2">
        <img 
          src={isRTL ? "/images/logo_arabic.svg" : "/images/LOGO.svg"} 
          alt="Seelenruhe Logo" 
          class="h-12 w-auto mb-4"
        />
        <p class="text-gray-400 leading-relaxed">
          {t.welcome.description}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-bold mb-4 text-secondary">Quick Links</h3>
        <ul class="space-y-2">
          <li>
            <a href={`/${lang}`} class="text-gray-400 hover:text-primary transition-colors duration-300">
              {t.nav.home}
            </a>
          </li>
          <li>
            <a href={`/${lang}/services`} class="text-gray-400 hover:text-primary transition-colors duration-300">
              {t.nav.services}
            </a>
          </li>
          <li>
            <a href={`/${lang}#about`} class="text-gray-400 hover:text-primary transition-colors duration-300">
              {t.nav.about}
            </a>
          </li>
          <li>
            <a href={`/${lang}#contact`} class="text-gray-400 hover:text-primary transition-colors duration-300">
              {t.nav.contact}
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-bold mb-4 text-secondary">{t.contact.title}</h3>
        <ul class="space-y-2 text-gray-400">
          <li class="flex items-start space-x-2">
            <svg class="w-5 h-5 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>{t.contact.address}</span>
          </li>
          <li class="flex items-center space-x-2">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href={`tel:${t.contact.phone}`} class="hover:text-primary transition-colors">
              {t.contact.phone}
            </a>
          </li>
          <li class="flex items-center space-x-2">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href={`mailto:${t.contact.email}`} class="hover:text-primary transition-colors">
              {t.contact.email}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-400 text-sm mb-4 md:mb-0">
        {t.footer.copyright}
      </p>
      <div class="flex space-x-6">
        <a href="#" class="text-gray-400 hover:text-primary transition-colors text-sm">
          {t.footer.privacy}
        </a>
        <a href="#" class="text-gray-400 hover:text-primary transition-colors text-sm">
          {t.footer.terms}
        </a>
        <a href="#" class="text-gray-400 hover:text-primary transition-colors text-sm">
          {t.footer.imprint}
        </a>
      </div>
    </div>
  </div>
</footer>
